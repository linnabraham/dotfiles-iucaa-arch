uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING )
urgency.user.tag.thesis.coefficient=1.1
urgency.user.tag.someday.coefficient=-0.5
urgency.user.tag.fix.coefficient=0.5
report.projall.description=Simple list of open tasks by project
report.projall.columns=id,status,entry.age,tags,project,description.count,urgency
report.projall.filter=(status:pending or status:completed)
report.showtasks.description=My report to use instead of next
report.showtasks.columns=id,start.age,entry.age,tags,depends,priority,recur,scheduled.countdown,due.relative,until.remaining,description,project,urgency
report.showtasks.filter=status:pending -WAITING -archive limit:none
default.command=showtasks
